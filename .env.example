# Email for ACME/Let's Encrypt SSL certificate registration
ACME_EMAIL=your-email@example.com

# Primary domain for the application
APP_DOMAIN=localhost

# Database Configuration
DB_DATABASE=app
DB_USERNAME=app
DB_PASSWORD=change_this_password_in_production
MYSQL_ROOT_PASSWORD=change_this_root_password_in_production

# phpMyAdmin Basic Auth
# Generate bcrypt hash: docker run --rm caddy:2-alpine caddy hash-password --plaintext 'your-password'
PMA_BCRYPT_HASH=$$2a$$14$$example_bcrypt_hash_replace_this

# Application Environment (local, staging, production)
APP_ENV=local
APP_DEBUG=true
